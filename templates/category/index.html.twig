{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
{% for category in categories %}
	<div>
		<h2>{{ loop.index }}
			/
			{{ category.name }}
		</h2>
        <p>
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir les séries de la catégorie</a>
        </p>
	</div>
{% endfor %}

{% endblock %}
